<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        - support theme Theme.AppCompat
        - prefered theme @android:style/Theme.Holo.Light
    -->
    <style name="Theme.AppCompat.AppBaseTheme" parent="Theme.AppCompat">
        <item name="android:padding">5sp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif</item>
        <!-- <item name="android:fontFamily" tools:targetApi="o">@font/davek/Dwarvish.otf</item> -->
        <item name="android:background">@color/shadow_dark</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:minHeight">@dimen/min_control_height</item>
        <item name="android:minWidth">@dimen/min_control_width</item>
    </style>


    <style name="AppTheme.HugeHeader" parent="AppTheme.Strong">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_extremly_big</item>
    </style>


    <style name="AppTheme.BigHeader" parent="AppTheme.Strong">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_very_big</item>
    </style>

    <style name="AppTheme.SmallHeader" parent="AppTheme.Strong">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:inputType">textCapCharacters</item>
    </style>
    <style name="AppTheme.Strong" parent="AppTheme">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.Strong.Error" parent="AppTheme.Strong">
        <item name="android:textColor">@color/error_text_color</item>
    </style>
    <style name="AppTheme.Normal" parent="AppTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>
    <style name="AppTheme.Normal.Error" parent="AppTheme.Normal">
        <item name="android:textColor">@color/error_text_color</item>
    </style>
    <style name="AppTheme.Weak" parent="AppTheme">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="AppTheme.Weak.Error" parent="AppTheme.Weak">
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <!-- Used for the console type fonts -->
    <style name="AppTheme.Console" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="AppTheme.Search" parent="AppBaseTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    <style name="AppTheme.Shadow" parent="AppBaseTheme">
        <item name="android:background">@drawable/shadow_nine_patch</item>
        <item name="android:padding">27dp</item>
    </style>
    <style name="AppTheme.Scroll" parent="AppBaseTheme">
        <item name="android:background">@drawable/scoll_wide</item>
        <item name="android:padding">30dp</item>
    </style>
    <style name="AppTheme.Scroll.Cell" parent="AppTheme.Scroll">
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>


    <style name="AppTheme.Frame" parent="AppBaseTheme">
        <item name="android:background">@drawable/goldframe</item>
        <item name="android:padding">30dp</item>
    </style>
    <style name="AppTheme.Center" parent="AppBaseTheme">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.SmallHeader">
        <item name="android:minHeight">@dimen/min_control_height</item>
        <item name="android:minWidth">@dimen/min_control_width</item>
    </style>

    <style name="AppTheme.SmallButton" parent="AppTheme.Button">
        <item name="android:maxHeight">@dimen/min_control_height</item>
    </style>

    <style name="AppTheme.AddButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_add</item>
    </style>
    <style name="AppTheme.DeleteButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_delete</item>
    </style>
    <style name="AppTheme.ClearButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_clear</item>
    </style>
    <style name="AppTheme.EditButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_edit</item>
    </style>
    <style name="AppTheme.SaveButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_save</item>
    </style>
    <style name="AppTheme.SearchButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_search</item>
    </style>
    <style name="AppTheme.PrintButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_print</item>
    </style>
    <style name="AppTheme.CancelButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_cancel</item>
    </style>
    <style name="AppTheme.PlayButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_play</item>
    </style>
    <style name="AppTheme.PauseButton" parent="AppTheme.Button">
        <item name="android:src">@drawable/ic_control_pause</item>
    </style>

    <style name="AppTheme.EditField" parent="AppTheme.Normal">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.EditMultiline" parent="AppTheme.Normal">
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppTheme.CheckBox" parent="AppTheme.Normal">
    </style>

    <style name="AppTheme.LineBreak" parent="AppTheme">
        <item name="android:src">@drawable/ic_mv_linebreak</item>
        <!-- <item name="adjustViewBounds">false</item> -->
        <item name="android:scaleType">fitXY</item>
        <item name="android:scaleY">0.5</item>
    </style>


    <style name="AppTheme.Spinner" parent="AppTheme.Strong">
        <item name="android:spinnerMode">dropdown</item>

    </style>

    <style name="AppTheme.List" parent="AppTheme">
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:scrollbarSize">@dimen/min_control_width</item>
        <item name="android:listSelector">@color/shadow_dark</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="AppTheme.Picture" parent="AppTheme">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.TabItem" parent="AppTheme">
    </style>


    <style name="AppTheme.ProgressBar">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>



    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />



</resources>

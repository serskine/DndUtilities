<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    style="@style/AppTheme.Scroll.Cell"
    >

    <!-- NAME LINE -->
    <WebView
        android:id="@+id/theName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BigHeader"
        />


    <!-- MONSTER TYPE LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <WebView
            android:id="@+id/theTypeAndAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Weak"
            />
    </LinearLayout>

    <!-- source information -->
    <WebView
        android:id="@+id/theSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/AppTheme.Weak"
        />


    <!-- INSERT LINE BREAK HERE -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mv_linebreak"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:scaleY="0.5"
        />

    <!-- ARMOR CLASS LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/theAc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
        <WebView
            android:id="@+id/theAcType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
    </LinearLayout>

    <!-- HIT POINTS LINE -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/theHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
        <WebView
            android:id="@+id/theHd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
    </LinearLayout>

    <!-- SAVES LINE -->
    <LinearLayout
        android:id="@+id/theSavesGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:stretchColumns="0,1"
    style="@style/AppTheme.Scroll.Cell"
    >

    <TableRow
        android:layout_weight="1"
        >
        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:layout_span="2"
            style="@style/AppTheme.BigHeader"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tierText"
            android:layout_span="1"
            style="@style/AppTheme.Strong"
            />
        <TextView
            android:text="Proficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profText"
            android:layout_span="1"
            style="@style/AppTheme.Strong"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/easyText"
            android:layout_span="1"
            style="@style/AppTheme.Normal"
            />
        <TextView
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normalText"
            android:layout_span="1"
            style="@style/AppTheme.Normal"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:text="Hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hardText"
            android:layout_span="1"
            style="@style/AppTheme.Normal"
            />
        <TextView
            android:text="Deadly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deadlyText"
            android:layout_span="1"
            style="@style/AppTheme.Normal"
            />
    </TableRow>

</TableLayout>

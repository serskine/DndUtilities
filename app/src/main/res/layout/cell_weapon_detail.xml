<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Scroll.Cell"
    >
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theName"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.BigHeader"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theCost"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Normal"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theDamage"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Normal"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theWeight"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Normal"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theProperties"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Normal"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theType"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Normal"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theDescription"
        android:gravity="center_vertical|start"
        android:scaleType="fitXY"
        style="@style/AppTheme.Weak"
        />
</LinearLayout>
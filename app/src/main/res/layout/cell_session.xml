<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_session"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.soupthatisthick.encounterMap.activity.lookup.EditSessionActivity"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    style="@style/AppTheme.Frame"
    >

    <TextView
        android:id="@+id/adventureName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/es_adventure"
        style="@style/AppTheme.BigHeader"
        />

    <TextView
        android:id="@+id/datePlayed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Strong"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@style/AppTheme.Normal"
            />

        <TextView
            android:id="@+id/dmDci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@style/AppTheme.Normal"
            />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Scroll.Cell"
>

    <!-- NAME LINE -->
    <TextView
        android:id="@+id/theName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.BigHeader"
        />


    <!-- MONSTER TYPE LINE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theTypeAndAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Weak"
            />
    </LinearLayout>


    <!-- CHALLENGE LINE -->
    <LinearLayout
        android:id="@+id/theChallengeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theCr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
        <TextView
            android:id="@+id/theXp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Normal"
            />
    </LinearLayout>

    <!-- source information -->
    <TextView
        android:id="@+id/theSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/AppTheme.Weak"
        />

</LinearLayout>